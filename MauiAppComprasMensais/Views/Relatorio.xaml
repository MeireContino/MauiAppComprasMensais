<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppComprasMensais.Views.Relatorio"
             Title="Relatorio de Compras"
             BackgroundColor="Beige">
    <StackLayout Padding="20" Spacing="10">
        <Label Text="Filtrar por PerÃ­odo:" FontAttributes="Bold" FontSize="18" />

        <DatePicker x:Name="dateInicio" Format="dd/MM/yyyy" />
        <DatePicker x:Name="dateFinal" Format="dd/MM/yyyy" />

        <Button Text="Filtrar" Clicked="Button_Clicked_1" />

        <CollectionView x:Name="lst_relatorio">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Padding="10" BackgroundColor="#FFF8DC">
                        <Label Text="{Binding Descricao}" FontAttributes="Bold" />
                        <Label Text="{Binding Preco, StringFormat='{}{0:c}'}"  />
                        <Label Text="{Binding Quantidade}" />
                        <Label Text="{Binding Total, StringFormat='{}{0:c}'}" />
                        <Label Text="{Binding DataCadastro, StringFormat='Comprado em: {0:dd/MM/yyyy}'}" />
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        
    </StackLayout>
</ContentPage>